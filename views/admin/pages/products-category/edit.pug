extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
  +alert-error(5000)
  +alert-success(5000)

  if(role.permissions.includes("products-category_edit"))
    h1(class="mb-4") Tạo mới danh mục sản phẩm
    form(
      action= `${prefitAdmin}/products-category/edit/${data.id}?_method=PATCH`
      id= "form-create-product"
      method= "POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
          value= data.title
        )
      div(class="form-group")
        label(for="title") Danh mục cha
        select(
          class="form-control"
          id="parent_id"
          name="parent_id"
        )
          option(value="") --Chọn danh mục cha--
            +select-tree(records, 1, data.parent_id)
      div(class="form-group")
        label(for="desc") Mô tả
        textarea(
          class="form-control textarea-mce"
          id="desc"
          name="description"
          rows="5"
        ) #{data.description}
      div(
        class="form-group"
        upload-image
      )
        label(for="thumbnail") Ảnh
        input(
          type="file"
          class="form-control-file"
          id="thumbnail"
          name="thumbnail"
          accept="image/*"
          upload-image-input
        )
        span(class="box-image")
          img(
            src= data.thumbnail
            upload-image-preview 
            class="image-preview"
          )
          span(class="image-close") x
      div(class="form-group")
        label(for="position") Vị trí
        input(
          type="number"
          class="form-control"
          id="position"
          name="position"
          placeholder="Tự động tăng"
          min="1"
          value= data.position 
        )
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked =(data.status === "active" ? true : false)
        )
        lable(for="statusActive" class="form-check-label") Hoạt động 
      div(class="form-group form-check form-check-inline")
        input( 
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="inactive"
          checked = (data.status === 'inactive' ? true : false)
          )
        lable(for="statusActive" class="form-check-label") Dừng Hoạt động 
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Cập nhập

    script(src="/admin/js/product.js")
    
           
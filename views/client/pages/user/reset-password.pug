extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đặt mật khẩu mới
        form(
          action="/user/password/reset"
          method="POST"
        )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            label(for="configPassword") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control"
              id="configPassword"
              name="configPassword"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận
mixin product-item(products) 
  .row
      each item in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(
                src=item.thumbnail, a
                lt=item.title
              )
              if(item.featured === "1")
                .inner-featured nổi bật
            .inner-content
              a(
                href= `/products/detail/${item.slug}`
                class="inner-title"
              ) #{item.title}
              .inner-price-new #{item.newPrice}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%